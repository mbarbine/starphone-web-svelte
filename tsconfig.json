{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "strict": true,
    "types": ["svelte"],
    "lib": ["esnext", "DOM"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "preserveValueImports": true
  },
  "include": [
    "src/**/*.svelte",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules/**",
    "src/service-worker.ts"
  ]
}
